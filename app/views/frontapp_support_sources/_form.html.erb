<%= form_for(@support_source) do |f| %>
    <% if @support_source.errors.any? %>
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@support_source.errors.count, "error") %> prohibited this support source from being saved</h3>
        </div>
        <div class="panel-body">
            <% @support_source.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    </div>
    <% end %>

    <div class="form-group">
        <%= f.label :frontapp_auth_token %>
        <%= f.text_field :frontapp_auth_token, autocomplete: 'off', class: 'form-control' %>
        <small>Obtain this in Frontapp -&gt; Settings -&gt; API &amp; Integrations -&gt; API</small>
    </div>

    <div class="form-group">
        <%= f.label :frontapp_user_id, 'Frontapp email' %>
        <%= f.text_field :frontapp_user_id, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :frontapp_inbox_ids_as_string, 'IDs of the relevant Frontapp inboxes' %>
        <%= f.text_field :frontapp_inbox_ids_as_string, class: 'form-control' %>
        <small>
            Comma separated.
            <table class="table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Inbox</th>
                        <th>ID</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Support</td>
                        <td>inb_1fi9</td>
                    </tr>
                    <tr>
                        <td>Security</td>
                        <td>inb_1fia</td>
                    </tr>
                </tbody>
            </table>
            Ask Niels if you need help
        </small>
    </div>

    <div class="actions">
        <p><%= f.submit class: 'btn btn-primary' %></p>
    </div>
<% end %>

